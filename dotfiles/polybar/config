label-maxlen = 30

;}}}

;{{{
[module/date]
type = internal/date
date = %{F#5294E2}%{F-} %e %b - %H:%M
label = %date%
interval = 1.0
label-padding = 2
;}}}

;{{{
[module/volume]
type = internal/alsa

