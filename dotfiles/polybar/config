;{{{

[module/i3]
type = internal/i3
enable-click = true
enable-scroll = true
strip-wsnumbers = false
format = <label-state> <label-mode> 
pin-workspaces = false
index-sort = true

ws-icon-0 = 1; 
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 0;

;Variaveis background foreground underline overline padding margin

label-mode-foreground = ${colors.gray4}
label-mode-background = ${colors.green}
label-mode-padding = 2
label-mode-margin = 0

label-focused = %icon% %name%
label-focused-padding = 2
label-focused-margin = 0
label-focused-foreground = ${colors.blue}
;label-focused-background = ${colors.gray3}

label-unfocused = %icon% %name%
label-unfocused-padding = 2
label-unfocused-margin = 0
label-unfocused-foreground = ${colors.gray4}

label-visible = %icon% %name%
label-visible-padding = 2
label-visible-margin = 0
label-visible-foreground = ${colors.blue}

label-urgent = %icon% %name%
label-urgent-padding = 2
